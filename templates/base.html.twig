<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}BobyBlog{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('scripts/stillshit.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <script src="{{ asset('scripts/jquery.min.js') }}"></script>
    </head>
    <body>
        <header class="header">
            {%  block header %}{% endblock %}
        </header>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('scripts/popper.min.js') }}"></script>
            <script src="{{ asset('scripts/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('scripts/bobyblog.min.js') }}"></script>
        {% endblock %}
    </body>
</html>