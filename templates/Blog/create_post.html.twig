{% extends 'base.html.twig' %}
{% block header %}{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                {{ form_label(form.text) }}
            </div>
            {{ form_widget(form.text) }}
        </div>
    </div>

    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                {{ form_label(form.happenedDate) }}
            </div>
            {{ form_widget(form.happenedDate) }}
        </div>
    </div>

    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                {{ form_label(form.tags) }}
            </div>
            {{ form_widget(form.tags) }}
        </div>
    </div>

    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                {{ form_label(form.photos) }}
            </div>
            {{ form_widget(form.photos) }}
        </div>
    </div>

    {{ form_end(form) }}
    <br>
    <div class="isDoneTyping text-success">Done !</div>
    <div class="image_list"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#post_tags').change((e)=>{
            $('#post_tags').val($('#post_tags').val().replace(/\s/g,''));
        });

        $('#post_photos').change(function(e) {
            var fileId = e.target.id;

            for (i = 0; i < $("#" + fileId).prop("files").length; i++) {
                var formData = new FormData();
                var fileData = $("#" + fileId).prop("files")[i];
                formData.append("image", fileData);

                $.ajax({
                    url: "upload_image",
                    cache: false,
                    contentType: false,
                    processData: false,
                    async: false,
                    data: formData,
                    type: 'post',

                    success: function(data) {
                        let imageIds = $("#post_imageIds").val();
                        let newImageId = data.id;
                        imageIds = imageIds === "" ? newImageId : imageIds+";"+newImageId
                        $("#post_imageIds").val(imageIds);
                        $(".image_list").html($(".image_list").html()+'\
                            <figure class="pr-1 bg-primary d-inline-block mx-2 image-thumbnail">\n\
                                <img width="200" height="100" src="/uploads/'+data.src+'"/>\n\
                                <figcaption>\n\
                                    <input class="w-100 mt-1 imageCaptions" id="caption_for_'+newImageId+'" data-id="'+newImageId+'" type="text" />\n\
                                </figcaption>\n\
                            </figure>\n\
                        ');
                    }
                });
            }
        });

        $(document).on('keydown', '.imageCaptions', (e) => {
            $('.isDoneTyping').removeClass('text-success');
            $('.isDoneTyping').addClass('text-danger');
            $('.isDoneTyping').text('Typing...');
        });

        $(document).on('change', '.imageCaptions', (e) => {
            let imgId = e.target.dataset.id;
            let data = {
                id: imgId,
                caption: $("#caption_for_"+imgId).val()
            };

            $.ajax({
                url: "update_image",
                cache: false,
                async: true,
                data: data,
                type: 'post',

                success: function() {
                    $('.isDoneTyping').removeClass('text-danger');
                    $('.isDoneTyping').addClass('text-success');
                    $('.isDoneTyping').text('Done !');
                }
            });
        });
    </script>
{% endblock %}