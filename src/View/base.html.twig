<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Bobyblog{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="/public_html/stillshit.css" type="text/css" rel="stylesheet" />
        <link href="/public_html/photoswipe/photoswipe.css" type="text/css" rel="stylesheet" />
        <link href="/public_html/photoswipe/default-skin/default-skin.css" rel="stylesheet" /> 
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="container bg-light px-0">
            <header class="header px-2">
                <nav class="navbar navbar-expand-sm">
                    <a class="navbar-brand mb-0 h1" href="/" >Bobyblog</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    {% if loggedUser is not null %}
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">

                                {% if isAdmin %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="/user">Users</a>
                                    </li>
                                {% endif %}
                                <li class="nav-item">
                                    <a class="nav-link" href="/request">Requests</a>
                                </li>
                                <li class="nav-item float-end">
                                    <a class="nav-link" href="#" onclick="logout();">Logout</a>
                                </li>
                            </ul>
                        </div>
                        <a class="d-none d-sm-block">
                            {{ loggedUser.firstName }} {{ loggedUser.lastName }}
                        </a>
                    {% endif %}
                </nav>
            </header>
            <div class="content px-2">
                {% block content %}{% endblock %}
            </div>
        </div>

        {% block javascripts %}
        <script type="text/javascript">
            $(document).ready(function () {
                setCookie = function (cname, cvalue, exSec) {
                    const d = new Date();
                    d.setTime(exSec * 1000);
                    let expires = "expires=" + d.toUTCString();
                    document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
                };

                logout = function () {
                    setCookie('token', null, -1);
                    location.reload(true);
                };
            });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        <script src="/public_html/photoswipe/photoswipe.min.js"></script>
        <script src="/public_html/photoswipe/photoswipe-ui-default.min.js"></script> 
        {% endblock %}
    </body>
</html>